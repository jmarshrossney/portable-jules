{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.12.0/.schema/devbox.schema.json",
  "packages": [
    "coreutils@latest",
    "curl@latest",
    "diffutils@latest",
    "git@latest",
    "gfortran@latest",
    "glibcLocales@latest",
    "gnumake@latest",
    "neovim@latest",
    "netcdf@latest",
    "netcdffortran@latest",
    "openssh@latest",
    "parallel@latest",
    "perl538@latest",
    "perl538Packages.ConfigIniFiles@latest",
    "perl538Packages.DBDSQLite@latest",
    "perl538Packages.XMLParser@latest",
    "python@3.12",
    "subversion@latest",
    "which@latest",
  ],
  "env_from": ".env",
  "env": {
    "DEVBOX_PROMPT_MODIFIER": "ðŸ“¦ ",
    "VENV_DIR": ".venv",
  },
  "shell": {
    "init_hook": [
      "export FCM_ROOT=$DEVBOX_PROJECT_ROOT/fcm",
      "export JULES_ROOT=$DEVBOX_PROJECT_ROOT/jules",
      "export JULES_BUILD_DIR=$DEVBOX_PROJECT_ROOT/build",
      "export JULES_NETCDF=netcdf",
      "export JULES_NETCDF_PATH=$DEVBOX_PROJECT_ROOT/.devbox/nix/profile/default",
      "export PATH=$JULES_BUILD_DIR/build/bin:$FCM_ROOT/bin:$PATH",
      "echo \"Activating the python virtual environment in $VENV_DIR\"",
      ". $VENV_DIR/bin/activate",
    ],
    "scripts": {
      "hello": "bash $DEVBOX_PROJECT_ROOT/scripts/hello.sh",
      "setup": "bash $DEVBOX_PROJECT_ROOT/scripts/jules_setup.sh $1",
      "build": "bash $DEVBOX_PROJECT_ROOT/scripts/jules_build.sh",
      "jules": "bash $DEVBOX_PROJECT_ROOT/scripts/jules_run.sh $@",
      "loobos": [
        "bash $DEVBOX_PROJECT_ROOT/scripts/jules_run.sh -d $DEVBOX_PROJECT_ROOT/examples/loobos $DEVBOX_PROJECT_ROOT/examples/loobos/config",
        "python $DEVBOX_PROJECT_ROOT/examples/loobos/analysis.py",
      ],
    },
  },
}
